{
    "root": true,
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": [
        "prettier",
        "airbnb",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "no-use-before-define": "off"
    },
    "plugins": [
        "prettier"
    ]
}